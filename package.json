{
    "name": "open-data-studio",
    "displayName": "Open Data Studio",
    "description": "An open source alternative to Azure Data Studio Features in VS Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:open-data-studio.helloWorld",
        "onView:openDataExplorer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "open-data-studio-sidebar",
                    "title": "Open Data Studio",
                    "icon": "$(database)"
                }
            ]
        },
        "views": {
            "open-data-studio-sidebar": [
                {
                    "id": "openDataExplorer",
                    "name": "Connections"
                }
            ]
        },
        "commands": [
            {
                "command": "open-data-studio.helloWorld",
                "title": "Open Data Studio: Hello World"
            },
            {
                "command": "open-data-studio.openDashboard",
                "title": "Open Dashboard"
            },
            {
                "command": "open-data-studio.addConnection",
                "title": "Add Connection",
                "icon": "$(add)"
            },
            {
                "command": "open-data-studio.deleteConnection",
                "title": "Delete Connection",
                "icon": "$(trash)"
            },
            {
                "command": "open-data-studio.newQuery",
                "title": "New Query",
                "icon": "$(new-file)"
            },
            {
                "command": "open-data-studio.runQuery",
                "title": "Run Query",
                "icon": "$(play)"
            },
            {
                "command": "open-data-studio.scriptTableAsCreate",
                "title": "Script as CREATE",
                "icon": "$(code)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "open-data-studio.addConnection",
                    "when": "view == openDataExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "open-data-studio.openDashboard",
                    "when": "view == openDataExplorer && viewItem == database",
                    "group": "navigation"
                },
                {
                    "command": "open-data-studio.newQuery",
                    "when": "view == openDataExplorer && viewItem == database",
                    "group": "inline"
                },
                {
                    "command": "open-data-studio.deleteConnection",
                    "when": "view == openDataExplorer && viewItem == server",
                    "group": "inline"
                },
                {
                    "command": "open-data-studio.scriptTableAsCreate",
                    "when": "view == openDataExplorer && viewItem == table",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/mssql": "^9.1.8",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "msnodesqlv8": "^5.1.3",
        "mssql": "^12.2.0"
    }
}