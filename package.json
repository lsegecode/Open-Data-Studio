{
    "name": "open-data-studio",
    "displayName": "Open Data Studio",
    "description": "An open source alternative to Azure Data Studio Features in VS Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:open-data-studio.helloWorld",
        "onView:openDataExplorer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "open-data-studio-sidebar",
                    "title": "Open Data Studio",
                    "icon": "$(database)"
                }
            ]
        },
        "views": {
            "open-data-studio-sidebar": [
                {
                    "id": "openDataExplorer",
                    "name": "Connections"
                }
            ]
        },
        "commands": [
            {
                "command": "open-data-studio.helloWorld",
                "title": "Open Data Studio: Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    }
}